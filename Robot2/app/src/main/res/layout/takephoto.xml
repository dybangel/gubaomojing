<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/com.example.administrator.robot"
    xmlns:app2="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">




    <RelativeLayout
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <SurfaceView
            android:id="@+id/sv1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:id="@+id/r1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </RelativeLayout>

        <ImageView
            android:id="@+id/iv3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            />

        <ImageView
            android:id="@+id/iv2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/sjs1" />
        <ImageView
            android:id="@+id/ivzhifubao"
            android:layout_width="300dp"
            android:layout_height="400dp"
            android:src="@drawable/zhifubao"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="invisible" />
        <ImageView
            android:id="@+id/iv1"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/qrcode"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:paddingTop="10dp"
            android:visibility="invisible" />


    <!--android:layout_alignParentBottom="true"android:layout_margin="50dp"-->
    <!--android:layout_alignParentLeft="true"
    android:layout_gravity="center_vertical|center_horizontal"--><!-- 该布局下的元素水平和垂直居中-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="16dp">

            <com.example.administrator.robot.CircleProgressBar
                android:id="@+id/play_circle_progress"
                android:layout_width="64dp"
                android:layout_height="64dp"

                android:layout_marginLeft="16dp"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_marginBottom="0dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="490dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/button5"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/returnmain"
                />
            <!--android:text="返回"-->

            <Button
                android:id="@+id/button4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:visibility="gone"
                android:background="@drawable/downloadpic"/>
                <!--android:text="获取照片"-->


            <Button
                android:id="@+id/button3"
                android:layout_width="80dp"
                android:layout_height="80dp"

                android:background="@drawable/takephoto"
               />
            <!--android:text="拍照"-->
            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="再拍一张"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"

            android:orientation="horizontal"
            android:layout_marginTop="189dp"
            android:layout_marginLeft="340dp"
            >

            <ImageView
                android:id="@+id/pic1"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/sjs1m" />

            <ImageView
                android:id="@+id/pic2"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/sjs2m" />

            <ImageView
                android:id="@+id/pic3"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/sjs3m" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="180dp"
            android:layout_height="380dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            >
            <include android:id="@+id/password"
                layout="@layout/input_password"
                android:visibility="gone"/>
        </RelativeLayout>

    </RelativeLayout>


</LinearLayout>